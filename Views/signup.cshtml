    <title>CODEXLY - Sign up</title>
    <script src="app.js" defer></script>
</head>
<body>
    <header class="header">
        <div class="header-left">CODEXLY</div>
        <nav class="header-nav">
            <a href="../home/index.html" class="nav-link">Home</a>
            <a href="../profile/index.html" class="nav-link">Profile</a>
            <a href="../dashboard/index.html" class="nav-link">Dashboard</a>
