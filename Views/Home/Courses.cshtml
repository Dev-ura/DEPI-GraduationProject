@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>codexly - Courses</title>
    <link rel="stylesheet" href="/css/Courses/style.css">
</head>
<body>
    <header class="header">
        <div class="header-left">CODEXLY</div>
        <nav class="header-nav">
            <a href="/home" class="nav-link">Home</a>
            <a href="/profile" class="nav-link">Profile</a>
            <a href="/dashboard" class="nav-link">Dashboard</a>
            <a href="/courses" class="nav-link">Courses</a>
            <a href="/todolist" class="nav-link">To-Do List</a>
            <a href="/notes" class="nav-link">My Notes</a>
            <a href="/roadmaps" class="nav-link">Roadmaps</a>
            <a href="/whiteboard" class="nav-link">Whiteboard</a>
            <a href="/contact" class="nav-link">Contact</a>
            <a href="/about" class="nav-link active about-btn">About</a>

        </nav>
    </header>

    <main>
        <h1 class="main-title">Available Courses</h1>

        <div class="search-container">
            <input type="text"
                   class="search-bar"
                   placeholder="Search for a course..." />
        </div>

        <div class="courses-grid">
            <div class="course-card">
                <div class="course-image java-image">
                    <div class="java-content">
                        <div class="java-gear">
                            <span class="java-text">JAVA</span>
                        </div>
                    </div>
                </div>
                <h3 class="course-title">Java Programming</h3>
            </div>

            <div class="course-card">
                <div class="course-image webdev-image">
                    <div class="webdev-content">
                        <div class="webdev-text">WEB DEVELOPMENT</div>
                        <div class="webdev-terms">
                            <span>html</span>
                            <span>seo</span>
                            <span>server-side</span>
                            <span>coding</span>
                            <span>markup</span>
                            <span>databases</span>
                            <span>ajax</span>
                            <span>e-commerce</span>
                            <span>java script</span>
                            <span>asp</span>
                            <span>web design</span>
                            <span>xhtml</span>
                            <span>graphic design</span>
                            <span>world wide web</span>
                            <span>client-side</span>
                        </div>
                    </div>
                </div>
                <h3 class="course-title">Web Development</h3>
            </div>

            <div class="course-card">
                <div class="course-image ds-image">
                    <div class="ds-content">
                        <div class="ds-text">DATA STRUCTURES</div>
                    </div>
                </div>
                <h3 class="course-title">Data Structures</h3>
            </div>
        </div>

        <div class="start-button-container">
            <button class="start-btn">Start</button>
        </div>
    </main>

    <footer>
        <div class="footer-content">
            <div class="footer-column">
                <h3>Useful Links</h3>
                <ul>
                    <li><a href="/about"> About Us</a></li>
                    <li><a href="/privacy"> Privacy Security</a></li>
                    <li><a href="/terms"> Terms Of Service</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Social Media</h3>
                <ul>
                    <li><a href="https://facebook.com" target="_blank" rel="noopener"> Facebook</a></li>
                    <li><a href="https://x.com" target="_blank" rel="noopener"> X</a></li>
                    <li><a href="https://instagram.com" target="_blank" rel="noopener"> Instagram</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Need Help ?</h3>
                <ul>
                    <li><a href="/faq"> FAQs</a></li>
                    <li><a href="/support"> Support</a></li>
                    <li><a href="/contact"> Contact Us</a></li>
                </ul>
            </div>
        </div>
    </footer>
    <script src="~/js/Courses/app.js"></script>
</body>
</html>