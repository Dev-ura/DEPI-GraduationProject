@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My to do list - CODEXLY</title>
    <link rel="stylesheet" href="~/css/TodoList/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <script defer src="~/js/TodoList/app.js"></script>
</head>
<body>
    <header class="header">
        <div class="header-left">CODEXLY</div>
        <nav class="header-nav">
            <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
            <a asp-controller="Profile" asp-action="Index" class="nav-link">Profile</a>
            <a asp-controller="Dashboard" asp-action="Index" class="nav-link">Dashboard</a>
            <a asp-controller="Courses" asp-action="Index" class="nav-link">Courses</a>
            <a asp-controller="TodoList" asp-action="Index" class="nav-link active to-do-list-btn">To-Do-List</a>
            <a asp-controller="Notes" asp-action="Index" class="nav-link">My Notes</a>
            <a asp-controller="Roadmaps" asp-action="Index" class="nav-link">Roadmaps</a>
            <a asp-controller="Whiteboard" asp-action="Index" class="nav-link">Whiteboard</a>
            <a asp-controller="Contact" asp-action="Index" class="nav-link">Contact</a>
            <a asp-controller="About" asp-action="Index" class="nav-link">About</a>
        </nav>
    </header>

    <main class="page">
        <h1 class="title">My to do list</h1>

        <div class="new-plan">
            <input id="new-plan-input" type="text" placeholder="Add a new plan" autocomplete="off" />
            <button id="add-plan-btn" type="button">Add</button>
        </div>

        <section id="plans" class="plans"></section>
    </main>
</body>
</html>
