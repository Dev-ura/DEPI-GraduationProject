@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Notes - CODEXLY</title>
	<link rel="stylesheet" href="~/css/Notes/style.css">
</head>
<body>
	<header class="header">
		<div class="header-left">CODEXLY</div>
		<nav class="header-nav">
			<a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
			<a asp-controller="Profile" asp-action="Index" class="nav-link">Profile</a>
			<a asp-controller="Dashboard" asp-action="Index" class="nav-link">Dashboard</a>
			<a asp-controller="Courses" asp-action="Index" class="nav-link">Courses</a>
			<a asp-controller="TodoList" asp-action="Index" class="nav-link">To-Do List</a>
			<a asp-controller="Notes" asp-action="Index" class="nav-link active my-notes-btn">My Notes</a>
			<a asp-controller="Roadmaps" asp-action="Index" class="nav-link">Roadmaps</a>
			<a asp-controller="Whiteboard" asp-action="Index" class="nav-link">Whiteboard</a>
			<a asp-controller="Contact" asp-action="Index" class="nav-link">Contact</a>
			<a asp-controller="About" asp-action="Index" class="nav-link">About</a>
		</nav>
	</header>

	<main class="layout">
		<aside class="sidebar">
			<div class="sidebar-header">
				<span>Markdown Notes</span>
				<button id="add-note" class="btn small">+ New</button>
			</div>
			<ul id="notes-list" class="notes-list" aria-label="Notes list">
				@* JS will render notes here dynamically *@
			</ul>
		</aside>

		<form id="note-form" asp-controller="Notes" asp-action="Create" method="post" class="editor">
			<div class="editor-split">
				<div class="editor-pane">
					<input id="note-title" name="Title" class="title-input" type="text" placeholder="Add Title .........." />
					<textarea id="note-body" name="ContentMarkdown" class="body-input" placeholder="Space to write down my notes"></textarea>
				</div>
				<div class="preview-pane">
					<div class="pane-header">Preview</div>
					<div id="preview-content" class="preview-content"></div>
				</div>
			</div>
			<div class="editor-actions">
				<button type="submit" class="btn primary">Save Note</button>
				<button type="button" id="delete-note" class="btn danger">Delete</button>
				<span id="save-indicator" class="save-indicator" aria-live="polite"></span>
			</div>
		</form>
	</main>

	<footer>
		<div class="footer-content">
			<div class="footer-column">
				<h3>Useful Links</h3>
				<ul>
					<li><a asp-controller="About" asp-action="Index">> About Us</a></li>
					<li><a asp-controller="Privacy" asp-action="Index">> Privacy Security</a></li>
					<li><a asp-controller="Terms" asp-action="Index">> Terms Of Service</a></li>
				</ul>
			</div>
			<div class="footer-column">
				<h3>Social Media</h3>
				<ul>
					<li><a href="https://facebook.com" target="_blank" rel="noopener">> Facebook</a></li>
					<li><a href="https://x.com" target="_blank" rel="noopener">> X</a></li>
					<li><a href="https://instagram.com" target="_blank" rel="noopener">> Instagram</a></li>
				</ul>
			</div>
			<div class="footer-column">
				<h3>Need Help ?</h3>
				<ul>
					<li><a asp-controller="Faq" asp-action="Index">> FAQs</a></li>
					<li><a asp-controller="Support" asp-action="Index">> Support</a></li>
					<li><a asp-controller="Contact" asp-action="Index">> Contact Us</a></li>
				</ul>
			</div>
		</div>
	</footer>

	<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
	<script src="~/js/Notes/app.js" defer></script>
</body>
</html>
